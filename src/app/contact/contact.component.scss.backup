/* Contact Form Style */
.contact {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px 64px;
  background-image: url('../../assets/images/backgrounds/beche background.webp');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.contact-content {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
  gap: 60px;
  max-width: 1100px;
  flex-wrap: wrap;
  z-index: 1;
}

.contact-intro,
.contact-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 400px;
  height: 550px;
  background: var(--primary-white);
  border-radius: 20px;
  border: solid 3px var(--dark-sand);
  padding: 20px;
  box-shadow: 0 15px 50px var(--shadow-medium);
  text-align: center;
}

.contact-intro {
  color: var(--text-dark);

  h2 {
    font-size: 32px;
    margin-bottom: 15px;
  }

  p {
    font-size: 24px;
    margin-bottom: 12px;
    line-height: 1.6;
  }
}

.message-textarea {
  max-height: 50px;
}

.contact-form {

  h2 {
    color: var(--text-dark);
    margin-bottom: 20px;
    font-size: 28px;
  }

  form {
    width: 100%;
    display: flex;
    flex-direction: column;
    flex: 1;
    justify-content: space-between;
    align-items: center;
    gap: 15px;

  input,
  textarea {
    width: calc(100% - 24px);
    padding: 12px;
    background: var(--light-beige);
    color: var(--ocean);
    border: 2px solid var(--dark-sand) !important;
    border-radius: 8px;
    font-size: 24px;
    resize: none;
    transition: border-color 0.3s ease;
    cursor: text;
    box-sizing: border-box;

    &:hover {
      border-color: var(--ocean) !important;
    }

    &::placeholder {
      color: var(--text-gray);
      opacity: 0.7;
    }

    &:focus {
      outline: none;
      border-color: var(--ocean) !important;
    }

    &::selection {
      background-color: var(--ocean);
      color: var(--primary-foreground);
    }

    &:-webkit-autofill {
      box-shadow: 0 0 0 30px var(--light-beige) inset !important;
      -webkit-text-fill-color: var(--ocean) !important;
      border: 2px solid var(--dark-sand) !important;
      caret-color: var(--ocean);
    }

    &:-webkit-autofill:focus {
      border-color: var(--ocean) !important;
    }
  }    .file-preview-container {
      height: 120px;
      width: 100%;
      overflow-y: auto !important;
      display: flex;
      flex-direction: column;
      gap: 6px;
      scrollbar-gutter: stable;
      border: none;

      &::-webkit-scrollbar {
        width: 6px !important;
        display: block !important;
      }

      &::-webkit-scrollbar-thumb {
        background-color: var(--accent-gray) !important;
        border-radius: 3px;
      }

      &::-webkit-scrollbar-track {
        background: transparent !important;
      }

      scrollbar-width: thin;
      scrollbar-color: var(--accent-gray) transparent;
    }

    .file-item {
      background: var(--light-beige);
      padding: 6px 10px;
      border: solid 2px var(--dark-sand);
      border-radius: 6px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      color: var(--text-dark);

      .file-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;

        p {
          margin: 0;
          font-size: 16px;
          flex-grow: 1;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
        }

        button {
          background: none;
          border: none;
          color: var(--accent-gray);
          font-size: 18px;
          cursor: pointer;
          margin-left: 10px;
          transition: transform 0.2s ease;

          &:hover {
            transform: scale(1.2);
            color: var(--dark-gray);
          }
        }
      }
    }

    button[type="submit"] {
      background: var(--ocean);
      color: var(--primary-foreground);
      border: 2px solid var(--ocean);
      width: 250px;
      padding: 12px;
      border-radius: 8px;
      font-size: 18px;
      cursor: pointer;
      transition: background 0.3s ease;
      position: relative;

      // Border fill animation on hover
      &::before,
      &::after {
        content: '';
        position: absolute;
        background: hsl(202, 85%, 24%);
        transition: all 0.4s ease;
        z-index: -1;
      }

      // Top border
      &::before {
        top: -2px;
        left: -2px;
        width: 0;
        height: 2px;
      }

      &:hover:not(:disabled)::before {
        width: calc(100% + 4px);
      }

      // Right border (delayed)
      &::after {
        top: -2px;
        right: -2px;
        width: 2px;
        height: 0;
        transition-delay: 0.2s;
      }

      &:hover:not(:disabled)::after {
        height: calc(100% + 4px);
      }

      // ðŸŸ¢ Pulsing border wave + scale when enabled
      &:not(:disabled) {
        animation: pulse-button 2s infinite;
      }

      &:hover:not(:disabled) {
        background: hsl(202, 85%, 24%);
        border-color: hsl(202, 85%, 24%);
      }

      // ðŸ”´ Gray border when disabled - more visible
      &:disabled {
        background-color: transparent;
        color: #ccc;
        border: 2px solid #ccc;
        cursor: not-allowed;
        animation: none;
        opacity: 1;
      }
    }

  }
}

.custom-file-label {
  display: inline-block;
  padding: 10px 16px;
  background-color: transparent;
  color: var(--text-dark);
  border: 2px dotted var(--dark-sand);
  border-radius: 8px;
  font-size: 16px;
  cursor: pointer;
  transition: background 0.3s ease, border-color 0.3s ease;

  &:hover {
    background-color: var(--light-beige);
    border-color: var(--accent-gray);
  }

  &:focus,
  &:active {
    outline: none;
    border-color: var(--accent-gray);
  }
}

@keyframes pulse-button {
  0% {
    transform: scale(1);
    border-color: var(--ocean);
    box-shadow: 0 0 0 0 hsla(202, 85%, 28%, 0.7);
  }

  50% {
    transform: scale(1.05);
    border-color: hsl(202, 85%, 24%);
    box-shadow: 0 0 0 8px hsla(202, 85%, 28%, 0);
  }

  100% {
    transform: scale(1);
    border-color: var(--ocean);
    box-shadow: 0 0 0 0 hsla(202, 85%, 28%, 0);
  }
}

.favorites-preview {
  width: 100%;
  min-height: 60px;
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;

  .favorite-image {
    position: relative;
    display: inline-block;

    img {
      width: 50px;
      height: 50px;
      object-fit: cover;
      border-radius: 6px;
      border: 2px solid var(--dark-sand);
      box-shadow: 0 2px 4px var(--shadow-light);
    }

    button {
      position: absolute;
      top: -8px;
      right: -8px;
      background: var(--accent-gray);
      border: none;
      color: var(--primary-white);
      font-size: 16px;
      border-radius: 50%;
      width: 22px;
      height: 22px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      z-index: 2;

      &:hover {
        background: #e57373;
        color: #fff;
      }
    }
  }
}

.favorites-hint {
  color: var(--text-dark);
  font-size: 18px;
  margin-bottom: 6px;
  text-align: left;
}

.favorites-empty {
  color: var(--text-gray);
  font-size: 18px;
  font-style: italic;
  margin-bottom: 8px;
}

/* Modal fÃ¼r Favoriten-Bild-Vorschau */
.image-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2000;
}

.image-modal-content {
  background: var(--primary-white);
  border-radius: 20px;
  border: 3px solid var(--dark-sand);
  padding: 10px 10px 5px 10px;
  box-shadow: 0 15px 50px var(--shadow-medium);
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;

  img {
    max-width: 80vw;
    max-height: 60vh;
    border-radius: 10px;
    border: 2px solid var(--dark-sand);
    box-shadow: 0 8px 25px var(--shadow-medium);
    background: var(--light-beige);
  }

  .modal-actions {
    display: flex;
    gap: 18px;
    justify-content: center;
    align-items: center;
    margin-top: 5px;
    width: 100%;
  }

  .remove-btn {
    background: #e57373;
    color: #fff;
    border: none;
    border-radius: 8px;
    padding: 8px 18px;
    font-size: 1rem;
    cursor: pointer;
    transition: background 0.2s;

    &:hover {
      background: #c62828;
    }
  }

  .close-btn {
    background: var(--accent-gray);
    color: var(--primary-white);
    border: 2px solid var(--dark-sand);
    border-radius: 8px;
    padding: 8px 18px;
    font-size: 1rem;
    cursor: pointer;
    transition: background 0.2s;

    &:hover {
      background: var(--dark-gray);
      color: #fff;
    }
  }
}

/* Cursor und Fokus fÃ¼r die Vorschau-Thumbnails */
.favorites-preview .favorite-image img {
  cursor: pointer;
  outline: none;
  transition: box-shadow 0.2s;
}

.favorites-preview .favorite-image img:focus {
  box-shadow: 0 0 0 3px #ffd700;
}